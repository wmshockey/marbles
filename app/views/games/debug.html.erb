<h1 id="header">Debug Game</h1>
<div class="col-sm-12 hidden" id="form_name"><%= "game" %></div>
<br>
<%= form_with(model: @game, local: true) do |form| %>

  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>
      <ul>
      <% @game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<body class="container">
	
		<br>
		<%= render partial: "editfields", locals: {form: form} %>
		<br>

		<div>
			<%= render partial: "calcfields", locals: {form: form} %>
		</div>
	
    <div class="row" >
      <div class="col-sm-2"><%= form.submit "Save", class:"btn btn-danger", id:"Save"%></div>
      <div class="col-sm-10"><%= link_to 'Back', games_path%></div>
    </div>

	<br>
	<% i = 0%>
	<% board_array = @game.board.split(",")%>
	<% until i > 96  do%>
		<div class="col-sm-1"><%= i%>:<%= board_array[i]%></div>
		<% i = i + 1%>
	<% end %>
	
	<br>
 	<%= image_tag "marbles_board_numbered.png", alt: "Marbles Clip Art"%>	

</body>
<% end %>


