<!DOCTYPE html>
<html>
  <head>
    <title>Marbles</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <div class="line1">

	  <% if user_signed_in? %>

			<span class="boardlabel" style="float: left">Player: </span>
			<strong><span class="boardlabel" id="user_name" style="float: left"><%= current_user.name %></span></strong>
			<span>
				<ul class="navbar-nav">
				  <li class="nav-item"><%= link_to "Home", '/', :class => 'nav-link', :style => "color:red"%></li>
				  <li class="nav-item"><%= link_to 'Games', '/games', :style => "color:red"%></li>
				  <li class="nav-item"><%= link_to "Help", '/welcome/help', :style => "color:red"%></li>
				  <li class="nav-item"><%= link_to "Rules", '/welcome/rules',  :style => "color:red" %></li>
				  <li class="nav-item"><%= link_to 'Profile', edit_user_registration_path, :style => "color:red" %></li>
				  <li class="nav-item"><%= link_to "Logout", destroy_user_session_path, method: :delete, :style => "color:red" %></li>
			 	</ul>
			</span>
	  
	<% else %>

		<span>
			<ul class="navbar-nav">
			  <li class="nav-item"><%= link_to "Sign up", new_user_registration_path, :style => "color:yellow"  %></li>
			  <li class="nav-item"><%= link_to "Login", new_user_session_path, :style => "color:yellow"  %></li>
		  	</ul>
		</span>

	<% end %>

	</div>
	
	<span class="msgArea">
		<span class="text-success bg-success"><%= notice %></span>
		<span class="text-danger bg-danger"><%= alert %></span>
	</span>
	<br>
	
    <%= yield %>
	
  </body>
</html>

