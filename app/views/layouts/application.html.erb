<!DOCTYPE html>
<html>
  <head>
    <title>Marbles</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

	  <div class="fixed_line1_left">
		  <span class="boardlabel">Logged in as: </span>
		  <% if user_signed_in? %>
				  <strong><span class="boardlabel" id="user_name"><%= current_user.name %></span></strong>
		  <% end %>
	  </div>

	  <div class="fixed_line1_centre boardlabel">
		<% if user_signed_in? %>
		  <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link bg-primary' %> |
		  <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link bg-primary'  %>
		<% else %>
		  <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
		  <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
		<% end %>
  	  </div>
	  
	<div class="fixed_line1_right text-success bg-success"><%= notice %></div>
	<div class="fixed_line1_right text-danger bg-danger"><%= alert %></div>

	
    <%= yield %>
	
  </body>
</html>

