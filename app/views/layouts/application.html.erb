<!DOCTYPE html>
<html>
  <head>
    <title>Marbles</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

	  <div class="line1">
		  <span class="boardlabel">Logged in as: </span>
		  <% if user_signed_in? %>
				  <strong><span class="boardlabel" id="user_name"><%= current_user.name %></span></strong>
		  <% end %>
	  </div>

	  <div id="navArea" class="navbar">
			<% if user_signed_in? %>
				<ul class="navbar-nav">
				  <li class="nav-item"><%= link_to "Home", '/', :class => 'nav-link', :style => "color:red"%></li>
				  <li class="nav-item"><%= link_to 'Games', '/games', :style => "color:red"%></li>
				  <li class="nav-item"><%= link_to "Help", '/welcome/help', :style => "color:red"%></li>
				  <li class="nav-item"><%= link_to "Rules", '/welcome/rules', :class => 'nav-link', :style => "color:red" %></li>
				  <li class="nav-item"><%= link_to 'Edit profile', edit_user_registration_path, :class => 'nav-link', :style => "color:red" %></li>
				  <li class="nav-item"><%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'nav-link', :style => "color:red" %></li>
				  <li class="nav-item"><%= link_to 'Back', games_path%></li>
			 	</ul>
			  
			<% else %>
				<ul class="navbar-nav">
				  <li class="nav-item"><%= link_to "Sign up", new_user_registration_path, :class => 'nav-link'  %></li>
				  <li class="nav-item"><%= link_to "Login", new_user_session_path, :class => 'nav-link'  %></li>
			  	</ul>
			<% end %>
  	  </div>
	  
	<div id="msgArea" class="text-success bg-success"><%= notice %></div>
	<div id="msgArea" class="text-danger bg-danger"><%= alert %></div>
	<br>
	
    <%= yield %>
	
  </body>
</html>

